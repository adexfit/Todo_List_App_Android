<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.solid.todolistapp">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Fab_Bottom_app_bar">
        <activity
            android:name="com.solid.todolistapp.StarterActivity"
            android:exported="true"
            android:windowSoftInputMode="adjustResize"
            android:noHistory="true"/>
        <activity
            android:name="com.solid.todolistapp.SplashActivity"
            android:exported="true"
            android:theme="@style/Theme.Fab_Bottom_app_bar.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.solid.todolistapp.features.task.NewTodoActivity"
            android:exported="true" />
        <activity
            android:name="com.solid.todolistapp.MainActivity"
            android:exported="true"
            android:label="@string/app_name"/>
    </application>

</manifest>